<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ws7.Cart">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <ComboBox fx:id="itemsComboBox" promptText="Select item" />
            <Label text="Select units:" />
            <Slider fx:id="quantitySlider" min="1" max="10" majorTickUnit="1" minorTickCount="0" snapToTicks="true" showTickLabels="true" showTickMarks="true" />
            <Label fx:id="purchasedUnitsLabel" text="1" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER">
                    <Label text="Unit:" />
                    <Label fx:id="unitValueLabel" text="0.00" style="-fx-text-fill: blue;" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Price/unit:" />
                    <Label fx:id="unitPriceValueLabel" text="0.00" style="-fx-text-fill: blue;" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Purchased Units:" />
                    <Label fx:id="purchasePriceValueLabel" text="0.00" style="-fx-text-fill: blue;" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="addButton" text="Add to Cart" />
                <Button fx:id="removeButton" text="Remove from Cart" />
                <Button fx:id="saveCartButton" text="Save Cart" />
                <Button fx:id="checkoutButton" text="Checkout" />
                <Button fx:id="viewSavedCartsButton" text="View Saved Carts" />
            </HBox>
            <TableView fx:id="cartTableView" prefHeight="200">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Item Name" />
                    <TableColumn fx:id="purchasedUnitsColumn" text="Purchased Units" />
                    <TableColumn fx:id="purchasePriceColumn" text="Purchase Price" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label fx:id="totalAmountLabel" text="Total: $0.00" style="-fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>
